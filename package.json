{
  "name": "bearbones",
  "version": "0.5.2",
  "description": "",
  "main": "bearbones.scss",
  "author": "Daniel Humenko",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "cssnano": "^3.10.0",
    "node-sass": "^3.4.2",
    "postcss-cli": "^2.5.1",
    "rimraf": "^2.6.1"
  },
  "scripts": {
    "deploy": "npm run build && git push --tags && npm publish",
    "build": "npm run clean && npm run build-sass && npm run build-autoprefix && npm run build-minify",
    "build-autoprefix": "postcss --use autoprefixer --output css/bearbones.css css/bearbones.css",
    "build-minify": "postcss --use cssnano --output css/bearbones.min.css css/bearbones.css",
    "build-sass": "node-sass --output-style expanded --source-map true sass/bearbones.scss css/bearbones.css",
    "clean": "rimraf css",
    "watch": "npm run build-sass -- --watch"
  }
}
