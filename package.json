{
  "name": "bearbones",
  "version": "0.30.0",
  "homepage": "https://bearbon.es",
  "description": "",
  "author": "Daniel Humenko",
  "license": "MIT",
  "main": "sass/bearbones.sass",
  "style": "css/bearbones.min.css",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/humenko/bearbones.git"
  },
  "keywords": [
    "css",
    "sass",
    "mobile-first",
    "flexbox",
    "responsive",
    "front-end",
    "framework"
  ],
  "bugs": {
    "url": "https://github.com/humenko/bearbones/issues"
  },
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "bundlesize": "^0.17.0",
    "csscomb": "^4.2.0",
    "cssnano": "^4.1.4",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "build:dev": "run-s clean build-sass build-autoprefix",
    "build:prod": "run-s build-sass build-autoprefix build-minify",
    "build-autoprefix": "postcss --use autoprefixer --output css/bearbones.css css/bearbones.css",
    "build-minify": "node-sass --output-style compressed css/bearbones.css css/bearbones.min.css",
    "build-sass": "node-sass --output-style expanded --source-map true sass/bearbones.scss css/bearbones.css",
    "clean": "rimraf css",
    "watch": "npm run build-sass -- --watch",
    "server": "http-server",
    "start": "run-p watch server",
    "test": "npm run test-size",
    "test-size": "bundlesize"
  },
  "bundlesize": [
    {
      "path": "./css/bearbones.css",
      "maxSize": "50 kB"
    },
    {
      "path": "./css/bearbones.min.css",
      "maxSize": "20 kB"
    }
  ]
}
